{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Auto Update and Push",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "git add . && git commit -m \"Autoupdate: $(date)\" && git push"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}
